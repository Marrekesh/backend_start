<h1>Courses</h1>

{{#if courses.length}}
{{#each courses}}
<div class="row">
    <div class="col s12 m12">
        <div class="card">
        <div class="card-image">
            <img src="{{img}}" alt="{{title}}">
        </div>
        <div class="card-content">
            <span class="card-title">{{title}}</span>  
            <p>{{price}}</p>
        </div>
        <div class="card-action">
            <a href="/courses/{{id}}">More about</a>
        </div>
        </div>
    </div>
</div>
{{/each}}
{{else}}
<p>Courses not found</p>
{{/if}}
<h1>Basket</h1>
<div class="basket">
    {{#if courses.length}}
        <table>

            <thead>
                <tr>
                    <th>Название</th>
                    <th>Количиство</th>
                    <th>Действие</th>
                </tr>
            </thead>

            <tbody>

                {{#each courses}}
                    <tr>
                        <td>{{title}}</td>
                        <td>{{count}}</td>
                        <td>
                            <button class="btn btn-small js-remove" data-id="{{id}}">Удалить</button>
                        </td>
                    </tr>
                {{/each}}
            </tbody>
        </table>

        <p><strong>Цена:</strong><span class="price">{{price}}</span></p>
    {{else}}

        <h1>Корзина пуста</h1>
    {{/if}}


</div>
